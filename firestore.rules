rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read, write, update, or delete nodes that they own.
    // The 'ownerId' field in the node document must match the UID of the authenticated user.
    match /nodes/{nodeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
